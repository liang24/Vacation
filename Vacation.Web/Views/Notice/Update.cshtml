@model Notice
@{
    ViewBag.Title = "修改公告";
}
<form id="form1" action="@Url.Action("Update")">
<input type="hidden" name="ID" value="@Model.ID" />
<div class="addinfo_con">
    <dl>
        <dt><i>*</i> 标题：</dt>
        <dd>
            <input type="text" name="Title" class="info_put" datatype="*" nullmsg="请输入编号！" value="@Model.Title" />
        </dd>
    </dl>
    <dl>
        <dt><i>*</i> 内容：</dt>
        <dd>
            <input type="text" name="Content" class="info_put" datatype="*" nullmsg="请输入名称！" value="@Model.Content" />
        </dd>
    </dl>
     
    <dl class="input_an">
        <dt></dt>
        <dd>
            <a class="input_ok" href="#" id="btnUpdate">修改</a><a class="close" href="#" id="btnClose">关闭</a>
        </dd>
    </dl>
</div>
</form>
@section Script{
    <script type="text/javascript">
        $(function () {
            $("#form1").Validform({
                tiptype: 4,
                ajaxPost: true,
                btnSubmit: "#btnUpdate",
                callback: function (data) {
                    if (data.IsSuccess) {
                        art.dialog.data("notice_update", true)
                        art.dialog({ content: "操作成功...", icon: "succeed", ok: function () {
                            art.dialog.close();
                        }
                        });
                    }
                    else {
                        art.dialog({ content: data.Message, icon: "error", ok: true });
                    }
                }
            });

            $("#btnClose").click(function () {
                art.dialog.close();
            });
        });
         
    </script>
}
