@model SysUser
@{
    ViewBag.Title = "修改用户";
}
<form id="form1" action="@Url.Action("Update")" runat="server">
<input type="hidden" name="ID" value="@Model.ID" />
<div class="addinfo_con">
    <dl>
        <dt>用户名：</dt>
        <dd>
            <input type="text" class="info_put" disabled="disabled" value="@Model.UserName" />
        </dd>
    </dl>
    <dl>
        <dt><i>*</i> 真实姓名：</dt>
        <dd>
            <input type="text" id="txtRealName" name="RealName" class="info_put" datatype="*"
                    nullmsg="请输入真实姓名！" value="@Model.RealName" /></dd>
    </dl>
    <dl>
        <dt><i>*</i> 邮箱：</dt>
        <dd>
            <input type="text" id="txtEmail" name="Email" class="info_put" value="@Model.Email"
                    datatype="e" nullmsg="请输入邮箱！" /></dd>
    </dl>
    <dl>
        <dt><i>*</i> 手机号码：</dt>
        <dd>
            <input type="text" name="Phone" class="info_put" datatype="m" nullmsg="请输入手机号码！" value="@Model.Phone" /></dd>
    </dl>
    <dl class="input_an">
        <dt></dt>
        <dd>
            <a class="input_ok" href="#" id="btnUpdate">修改</a><a class="close" href="#" id="btnClose">关闭</a>
        </dd>
    </dl>
</div>
</form>
@section Script{
    <script type="text/javascript">
        $(function () {
            $("#form1").Validform({
                tiptype: 4,
                ajaxPost: true,
                btnSubmit: "#btnUpdate",
                callback: function (data) {
                    if (data.IsSuccess) {
                        art.dialog.data("user_upd", true)
                        art.dialog({ content: "操作成功...", icon: "succeed", ok: function () {
                            art.dialog.close();
                        }
                        });
                    }
                    else {
                        art.dialog({ content: data.Message, icon: "error", ok: true });
                    }
                }
            });

            $("#btnClose").click(function () {
                art.dialog.close();
            });
        });
         
    </script>
}
